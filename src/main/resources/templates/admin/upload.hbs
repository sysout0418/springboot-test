        data: {
            inputTitle: '',
            inputContents: '',
            inputFile1: null,
            inputFile2: null
        },
        methods: {
            uploadFile: function() {
                if (this.inputTitle === '' || this.inputTitle === null || this.inputTitle === undefined) {
                    alert('제목을 입력하세요.');
                    return;
                }
                if (this.inputContents === '' || this.inputContents === null || this.inputContents === undefined) {
                    alert('내용을 입력하세요.');
                    return;
                }
                if (this.inputFile1 === null || this.inputFile1 === undefined) {
                    alert('파일이미지를 선택하세요.');
                    return;
                }
                if (this.inputFile2 === null || this.inputFile2 === undefined) {
                    alert('파일을 선택하세요.');
                    return;
                }

                var formData = new FormData();

                console.log('inputFile1 : ' + this.$refs.inputFile1.files[0]);
                console.log('inputFile2 : ' + this.$refs.inputFile2.files[0]);

                formData.append('title', this.inputTitle);
                formData.append('contents', this.inputContents);
                formData.append('fileImage', this.$refs.inputFile1.files[0]);
                formData.append('fileData', this.$refs.inputFile2.files[0]);

                axios.post('/file/upload', formData, {
                    headers: {
                        'Content-Type': 'multipart/form-data'
                    }
                }).then(function (response) {
                    if (response.data.result_code === '0') {
                        location.href = "/admin/index";
                    } else {
                        alert(response.data.result_msg);
                    }
                })
                .catch(function (error) {
                    console.log(error);
                });

